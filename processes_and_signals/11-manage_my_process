#!/usr/bin/env bash
# Displays its own PID

if [ "$1" = "start" ]
then
    ./manage_my_process &
    echo $! >> /var/run/my_process.pid
    echo "manage_my_process started" 

elif [ "$1" = "stop" ]
then
    pkill -f /var/run/my_process.pid
    rm -rf /var/run/my_process.pid
    echo "manage_my_process stoped" 

elif [ "$1" = "restart" ]
then
    pkill -f /var/run/my_process.pid
    rm -rf /var/run/my_process.pid
    ./manage_my_process &
    echo $! >> /var/run/my_process.pid
    echo "manage_my_process restarted"
else
    echo "Usage: manage_my_process {start|stop|restart}"
fi